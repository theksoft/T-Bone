{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "type": "shell",
            "label": "build active file (win)",
            "command": "make",
            "args": [
                "obj/win/${fileBasenameNoExtension}.o", "PLATFORM=win"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build active file (linux)",
            "command": "make",
            "args": [
                "obj/linux/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build all (win)",
            "command": "make",
            "args": [
                "all", "PLATFORM=win"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build all (linux)",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "rebuild all (win)",
            "command": "make",
            "args": [
                "clean", "all", "PLATFORM=win"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "rebuild all (linux)",
            "command": "make",
            "args": [
                "clean", "all"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build"
        }
    ]
}